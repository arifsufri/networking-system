{
  "version": 2,
  "buildCommand": "yarn build",
  "outputDirectory": "dist",
  "framework": "vite",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "pages/api/**/*.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "/pages/api/auth/$1.ts"
    },
    {
      "src": "/api/users/(.*)",
      "dest": "/pages/api/users/$1.ts"
    },
    {
      "src": "/api/events/(.*)",
      "dest": "/pages/api/events.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
